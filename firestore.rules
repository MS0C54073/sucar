
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /drivers/{driverId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Should be more specific later
    }

    match /services/{serviceId} {
        allow read: if true;
        allow write: if request.auth != null; // Admin only
    }

    match /bookings/{bookingId} {
      // Clients can read their own bookings, drivers can read theirs.
      allow get: if request.auth != null && (request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.driverId);
      // Clients can query bookings by their own clientId.
      allow list: if request.auth != null && request.query.get("clientId") == request.auth.uid;
      // Any authenticated user can create a booking for now.
      allow create: if request.auth != null;
      // Only clients or drivers associated with a booking can update it.
      allow update: if request.auth != null && (request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.driverId);
      allow delete: if false; // Disallow deletion for now.
    }
  }
}
